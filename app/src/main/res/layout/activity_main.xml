<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Change"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:text="Swap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/donothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:text="Hold All"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Change"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="409dp"
        android:layout_height="676dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagecp1"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imagecp2"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="21dp"
            app:layout_constraintEnd_toStartOf="@+id/imagecp3"
            app:layout_constraintStart_toEndOf="@+id/imagecp1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imagecp3"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="47dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imageflop3"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginTop="142dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toTopOf="@+id/imagep3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagecp3"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imageflop2"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="142dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toTopOf="@+id/imagep2"
            app:layout_constraintEnd_toStartOf="@+id/imageflop3"
            app:layout_constraintStart_toEndOf="@+id/imageflop1"
            app:layout_constraintTop_toBottomOf="@+id/imagecp2"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imageflop1"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="142dp"
            android:layout_marginBottom="172dp"
            app:layout_constraintBottom_toTopOf="@+id/imagep1"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/imagecp1"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imagep1"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imagep2"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imagep3"
            app:layout_constraintStart_toEndOf="@+id/imagep1"
            app:srcCompat="@drawable/backcard" />

        <ImageView
            android:id="@+id/imagep3"
            android:layout_width="72dp"
            android:layout_height="94dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="61dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/backcard" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="94dp"
            android:text="Player"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="212dp"
            android:layout_marginBottom="253dp"
            android:text="Flop"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="59dp"
            android:text="cpu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="4dp"
        android:text="confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/donothing"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>